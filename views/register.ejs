<!DOCTYPE html>
<html lang="en">
   
<!-- Head -->

<%- include('./partials/head.ejs', {style:'register', page:"Registro"}) %>

    <body>

        <!-- Navbar -->
       
        <%- include('./partials/navbar.ejs') %>

 <!-- Main -->
  <main>
    <h1 class="title">Mi Cuenta</h1>
    <form class="form" action="/" method="get"> 
        <div class="group__form">
            <label for="name">Nombre</label>
             <input type="text" name="name" id="name">
         </div>

        <div class="group__form">
           <label for="email">Correo Electrónico</label>
            <input type="text" name="email" id="name" placeholder="e-mail">
        </div>

        <div class="group__form">
            <label for="direction">Dirección</label>
             <input type="text" name="direction" id="direction">
         </div>
         
         <div class="group__form">
            <label for="phonenumber">Número de Telefono</label>
             <input type="number" name="phonenumber" id="phonenumber">
         </div>

        <div class="group__form">
            <label for="password">Contraseña</label>
            <input type="password" name="password" id="password">


         <button class="btn" type="submit">Registrarse</button>
    </form>
  </main>
  <!-- Footer -->
 
<%- include('./partials/footer.ejs') %>

</body>
</html>
